            <!-- Cartes -->
            <div class="grid">
             {% for enchere in encheres %}
                <article class="card" data-js-list="">
                    <header class="header-card">
                     
                        <picture class="card-image ">
                            <img src="./images/img-stamp/{{enchere.img_url}}" alt="stamp_Penny_red">
                        </picture>
                        <picture class="modal"><img src="./images/img-stamp/{{enchere.img_url}}" alt=""></picture>
                        

                        <div class="card-info">
                            <div class="card-info__titre">
                                <div  class="card-info__principal" >
                                    <h3 >Lot: {{enchere.timbre_id }}</h3>
                                    <a class="social__link favorit"  href="#">&#9819;</a>
                                </div>
                                <h3><a href="enchere?enchere_id={{enchere.enchere_id }}">{{ enchere.timbre_nom }}   ({{enchere.timbre_date}})</a></h3>
                                <span>{{ enchere.pays_nom }}</span>
                            </div>
                            <div class="card-info__actuel">
                                <p><small>Date de d√©but: </small>{{ enchere.enchere_date_debut }}</p> 
                                <p><small>Date de fin: </small>{{ enchere.enchere_date_fin }}</p> 
                            </div>    
                        </div>       
                    </header>
                    <div class="card-main">
                        <p><small>Depart:</small>{{ enchere.timbre_prix_plancher }}</p>
                        <p><small>Actuel:</small>{{ enchere.mise_prix }}</p>
                       
                    </div>
                    <div class="card-button">
                        <a  href="enchere?enchere_id={{enchere.enchere_id }}" class="btn">Detail</a>
                         <a  href="login" class="btn">Miser</a>
                       
                        
                        
                    </div>
                      
                </article>
                 {% else %}
        <div>Aucun enchere.</div>
        {% endfor %}
                
   
  